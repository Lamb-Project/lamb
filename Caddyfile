{
    email admin@yourdomain.com
}

lamb.yourdomain.com {
    encode gzip

    handle /creator/* {
        reverse_proxy backend:9099
    }

    handle /api/* {
        reverse_proxy backend:9099
    }

    handle /lamb/* {
        uri strip_prefix /lamb
        reverse_proxy backend:9099
    }

    handle /kb/* {
        uri strip_prefix /kb
        reverse_proxy kb:9090
    }

    # Legacy path redirect to new subdomain
    @oldowi path /openwebui/*
    handle @oldowi {
        redir https://owi.lamb.yourdomain.com{uri} 301
    }

    handle {
        root * /var/www/frontend
        try_files {path} /index.html
        file_server
    }
}

owi.lamb.yourdomain.com {
    encode gzip
    reverse_proxy openwebui:8080
}